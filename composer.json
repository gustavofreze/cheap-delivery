{
  "name": "gustavofreze/cheap-delivery",
  "description": "",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "CheapDelivery\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CheapDelivery\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1.7",
    "php-di/slim-bridge": "3.*",
    "slim/psr7": "1.*",
    "slim/slim": "4.*",
    "respect/validation": "2.*",
    "mongodb/mongodb": "1.*",
    "ext-mongodb": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpmd/phpmd": "2.*",
    "phpunit/phpunit": "9.*",
    "dg/bypass-finals": "1.*"
  },
  "scripts": {
    "test": "phpunit --colors",
    "test-coverage": "phpunit --log-junit=report/coverage/junit.xml --coverage-xml=report/coverage/coverage-xml --coverage-html ./report/coverage-html",
    "phpmd": "phpmd ./src text phpmd.xml"
  }
}